<mvc:View
    controllerName="sap.ui.demo.walkthrough.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>

 <IconTabBar>
     <items>
        <IconTabFilter text="{i18n>registerText}" icon="sap-icon://home">
            <Button
                text="Druckknopf"
                press="onClickMeButtonPress"
                icon="sap-icon://accept"
            />
            <Input
                value = "{/recipient/name}"
                description = "Hello your name is {/recipient/name}"
                valueLiveUpdate = "true"
                width = "60%" 
            />
        </IconTabFilter>
    </items>
</IconTabBar>

 </mvc:View>
